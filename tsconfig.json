{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    // "sourceMap": true,  // if for using ts-loader instead of babel-loader
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "strict": true
  },
  "include": ["./src/**/*"]
}
